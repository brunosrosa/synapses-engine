{
  "mcpServers": {
    "recoloca-rag": {
      "command": "python",
      "args": [
        "C:/Users/rosas/OneDrive/Documentos/Obisidian DB/Projects/Recoloca.AI/rag_infra/src/core/mcp_server.py"
      ],
      "cwd": "C:/Users/rosas/OneDrive/Documentos/Obisidian DB/Projects/Recoloca.AI",
      "env": {
        "PYTHONPATH": "rag_infra;rag_infra/src/core;rag_infra/src/utils",
        "CUDA_VISIBLE_DEVICES": "0",
        "RAG_CONFIG_PATH": "rag_infra/config/rag_optimization_config.json",
        "RAG_DATA_PATH": "rag_infra/data",
        "RAG_LOGS_PATH": "rag_infra/logs"
      },
      "description": "Sistema RAG para documentação do projeto Recoloca.ai - Versão Reorganizada",
      "timeout": 30000,
      "retries": 3,
      "healthCheck": {
        "enabled": true,
        "interval": 60000,
        "tool": "rag_get_status"
      },
      "capabilities": {
        "tools": [
          {
            "name": "rag_query",
            "description": "Consulta semântica no sistema RAG",
            "category": "search",
            "priority": "high"
          },
          {
            "name": "rag_search_by_document",
            "description": "Busca documentos por nome/caminho",
            "category": "search",
            "priority": "medium"
          },
          {
            "name": "rag_get_document_list",
            "description": "Lista documentos indexados",
            "category": "info",
            "priority": "medium"
          },
          {
            "name": "rag_reindex",
            "description": "Reindexar documentos",
            "category": "maintenance",
            "priority": "low"
          },
          {
            "name": "rag_get_status",
            "description": "Status do sistema RAG",
            "category": "info",
            "priority": "high"
          },
          {
            "name": "rag_get_metrics",
            "description": "Métricas de performance do RAG",
            "category": "monitoring",
            "priority": "medium"
          },
          {
            "name": "rag_clear_cache",
            "description": "Limpar cache do sistema RAG",
            "category": "maintenance",
            "priority": "low"
          },
          {
            "name": "rag_get_document_content",
            "description": "Obter conteúdo completo de um documento",
            "category": "search",
            "priority": "medium"
          },
          {
            "name": "rag_search_by_tags",
            "description": "Buscar documentos por tags/categorias",
            "category": "search",
            "priority": "medium"
          },
          {
            "name": "rag_get_similar_documents",
            "description": "Encontrar documentos similares",
            "category": "search",
            "priority": "medium"
          }
        ],
        "resources": [
          {
            "name": "rag_documents",
            "description": "Acesso aos documentos indexados",
            "mimeType": "application/json"
          },
          {
            "name": "rag_embeddings",
            "description": "Acesso aos embeddings gerados",
            "mimeType": "application/octet-stream"
          },
          {
            "name": "rag_indexes",
            "description": "Acesso aos índices FAISS",
            "mimeType": "application/octet-stream"
          },
          {
            "name": "rag_metrics",
            "description": "Métricas de performance",
            "mimeType": "application/json"
          }
        ]
      },
      "logging": {
        "level": "INFO",
        "file": "rag_infra/logs/mcp_server.log",
        "maxSize": "10MB",
        "backupCount": 5
      },
      "performance": {
        "maxConcurrentRequests": 10,
        "requestTimeout": 30000,
        "cacheSize": 1000,
        "enableProfiling": false
      },
      "security": {
        "allowedOrigins": ["trae-ide"],
        "rateLimiting": {
          "enabled": true,
          "maxRequests": 100,
          "windowMs": 60000
        }
      },
      "features": {
        "semanticSearch": true,
        "documentClustering": true,
        "realTimeIndexing": false,
        "multiLanguageSupport": true,
        "advancedFiltering": true
      },
      "optimization": {
        "gpu": {
          "enabled": true,
          "device": "cuda:0",
          "memoryFraction": 0.8
        },
        "embedding": {
          "model": "BAAI/bge-m3",
          "batchSize": 32,
          "maxLength": 512
        },
        "retrieval": {
          "topK": 10,
          "scoreThreshold": 0.7,
          "rerankingEnabled": true
        }
      },
      "monitoring": {
        "enabled": true,
        "metricsEndpoint": "/metrics",
        "healthEndpoint": "/health",
        "alerting": {
          "enabled": false,
          "thresholds": {
            "responseTime": 5000,
            "errorRate": 0.05,
            "memoryUsage": 0.9
          }
        }
      },
      "backup": {
        "enabled": true,
        "schedule": "0 2 * * *",
        "retention": "30d",
        "location": "rag_infra/reports/backups"
      },
      "experimental": {
        "hybridSearch": false,
        "neuralReranking": false,
        "adaptiveCaching": false,
        "distributedIndexing": false
      },
      "metadata": {
        "version": "2.0.0",
        "lastUpdated": "2025-06-20",
        "author": "@AgenteM_ArquitetoTI",
        "project": "Recoloca.ai",
        "environment": "development",
        "notes": "Configuração atualizada após reorganização estrutural da pasta rag_infra"
      }
    }
  },
  "globalSettings": {
    "logLevel": "INFO",
    "timeout": 30000,
    "retries": 3,
    "enableTelemetry": false,
    "compression": {
      "enabled": true,
      "algorithm": "gzip",
      "level": 6
    },
    "security": {
      "enableSSL": false,
      "validateCertificates": true,
      "allowSelfSigned": false
    }
  },
  "development": {
    "hotReload": true,
    "debugMode": true,
    "verboseLogging": true,
    "mockData": false,
    "testMode": false
  },
  "documentation": {
    "configVersion": "2.0",
    "lastReview": "2025-06-20",
    "changeLog": [
      {
        "version": "2.0.0",
        "date": "2025-06-20",
        "changes": [
          "Atualização do caminho do mcp_server.py para rag_infra/server/",
          "Correção do PYTHONPATH para nova estrutura reorganizada",
